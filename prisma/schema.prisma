generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  firstname String?
  lastname  String?
  email     String   @unique
  password  String? // null if Google account
  provider  String   @default("credentials") // "google" or "credentials"
  createdAt DateTime @default(now())

  batches Batch[]
  tests   Test[]
}

model Batch {
  id     String @id @default(cuid())
  name   String
  description String?
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  students Student[]
  tests    Test[]

  @@index([userId])
}

model Student {
  id      String @id @default(cuid())
  regNo   Int    @unique
  name    String
  email   String @unique
  batchId String
  batch   Batch  @relation(fields: [batchId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  answers Answer[]

  @@index([batchId])
}

model Test {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name         String
  description  String
  batchId      String
  active       Boolean @default(false)
  maximumMarks Int
  batch        Batch   @relation(fields: [batchId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  questions Question[]
  answers   Answer[]

  @@index([userId])
  @@index([batchId])
  @@index([active])
}

model Question {
  id         String @id @default(cuid())
  testId     String
  test       Test   @relation(fields: [testId], references: [id], onDelete: Cascade)
  text       String
  marks      Int
  orderForAi String
  createdAt  DateTime @default(now())

  answers Answer[]

  @@index([testId])
}

model Answer {
  id          String   @id @default(cuid())
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  testId      String
  test        Test     @relation(fields: [testId], references: [id], onDelete: Cascade)
  questionId  String
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  answer      String
  marksScored Int      @default(0)
  remarks     String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([studentId, testId, questionId])
  @@index([testId])
  @@index([studentId])
}